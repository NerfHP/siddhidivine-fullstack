{
  "compilerOptions": {
    /* --- Base Settings --- */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    /* --- Module Resolution (CRITICAL FIX) --- */
    // Use the classic 'node' strategy which is most compatible for both frontend and backend types.
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* --- React/Vite Frontend Settings --- */
    "jsx": "react-jsx",

    /* --- Path Aliasing & Custom Types --- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./api/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./api/types"
    ]
  },
  // Tell TypeScript to include ALL relevant files for both frontend and backend.
  "include": [
    "src", 
    "api",
    "vite.config.ts"
  ]
}

